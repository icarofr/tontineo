
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">

<link rel="stylesheet" type="text/css" href="_show.css">

<% if @is_owner  %>
  <%= render "tontines/show_admin" %>
<% else %>
<% end %>



  <div class="tontine_description">
    <div>
      <%= @tontine.name %></p>
      <%# <%= cl_image_tag @tontine.cover.key, height: 300, width: 400, crop: :fill , class:"tontine_cover" %>
      <p> Montant Mensuel :  <%= @tontine.contribution %> € </p>
      <p> Début de la tontine : <%= @tontine.start_month.strftime("%d/%m/%Y") %>
      <p> Date de réception : <%= @tontine.payment_day.strftime("%d/%m/%Y") %></p>
      <div class="members_list">
        <% @tontine.users.each do |user| %>
          <%# <%=  @tontine.cover.key, height: 300, width: 400, crop: :fill , class:"tontine_cover" %>
          <div class="d-flex my-2">
            <% if user.photo.attached? %>
              <%= cl_image_tag user.photo.key, class: "avatar inline", alt: "avatar"%>
              <div class="d-flex flex-column align-items-start ps-3">
                <p class="mb-1"><%= user.first_name %></p>
                <p><%= @tontine.payment_day %></p>
              </div>
            <% else %>
              <%= image_tag 'img/logo.png' %>
              <div class="d-flex flex-column align-items-start ps-3">
                <p class="mb-1"><%= user.first_name %></p>
                <p><%= @tontine.payment_day %></p>
              </div>
            <% end %>
          </div>
          <%# <%= tontines.payment_day %>
        <% end %>
      </div>
      <p> Statut de la tontine : <%= @tontine.status%></p>
    </div>
  </div>
