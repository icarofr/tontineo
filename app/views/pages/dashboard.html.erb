			<div class="dashboard-header__infos__company"><%= current_user.company %></div>
		</div>
	</div>
 	<%= link_to "CrÃ©er une tontine", new_tontine_path, class:"btn-rounded btn purple-btn py-3" %>
 	<% if @pending_tontines.present? %>
	 	<h4 class="underline">Tontine en attente</h4>
		<% @pending_tontines.each do |tontine|%>
