<div class="container">
	<div class="card-product m-3">
		<%= cl_image_tag current_user.photo.key, class:"avatar me-3" %>
	  <div class="card-product-infos">
	    <h3><strong><%= current_user.first_name%></strong></h3>	
	    <%= link_to "Se deconnecter", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
	    <h3><%= current_user.company %>| <%= current_user.email %></h3>
	    	  </div>
	</div>
		<h4>Tontine en cours</h4>
	  <hr class="border border-gray border-2 opacity-50">
		  	<% @tontines.each do |tontine|%>
	   <div class="card-product-tontine m-3">
		  	<%= tontine.name %> <br/>
		  	<img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/cveneziani" />
				<img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" />
				<img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/sarahlafer" />
				<img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/krokrob" /> <br/>
		  <br/>
		  
		  	
		  	<%= tontine.contribution %> €
		  	<h5>Début : <%= tontine.start_month %> €</h5>
		  
		  </div>
		  	<% end %> 
		<div class="d-grid gap-2 m-2">
		 <%= link_to "Créer une tontine", new_tontine_path, class:"btn-rounded btn purple-btn py-3" %>
		</div>
	</div>


  <%# unless @pending_member.nil? %>
    <%# @pending_member.each do |member| %>
    <div>
      <div>
        <%#= member.tontine.name %>
      </div>
      <div>
        <%#= link_to "Accept", accepte_member_tontine_path(member.tontine) %>
      </div>
      <div>
        <%#= link_to "Decline", decline_member_tontine_path(member.tontine) %>
      </div>
    </div>
    <%# end %>
  <%# end %>
</div>
